package kselection;

public class KSelection {
	int currentPos = 0;
	int[] arrayOfSmallest;
	public int kselect(int k, int[] values) 
	{
		arrayOfSmallest = new int[values.length];
		
		int posOfSmallest;
		
		//Checks if k is 0 or if the absolute value of k is smaller than the length of k
		if(k != 0 || Math.abs(k) <= values.length )
		{
			//Gets the next pair of values to read.
			int [] pair = readNextPair(values);
			
			for(int i = 0; i < values.length; i = i + 2)
			{
				if(pair[0] < pair[i])
				{
					posOfSmallest = currentPos;
				}
				else if(pair[0] == pair[i] && pair[1] < pair[i+1])
				{
					posOfSmallest = currentPos;
				}
			}
			currentPos = currentPos + 2;
		}
		else
		{
			return 0;
		}
	}
	
	private int[] readNextPair(int[] values)
	{
		return new int[]{values[currentPos], values[currentPos+1]};
	}
}
