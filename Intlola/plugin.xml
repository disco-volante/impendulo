    </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="za.ac.sun.cs.intlola.IntlolaRecord"
            commandId="za.ac.sun.cs.Intlola.record">
         <enabledWhen>
            <with
                  variable="activeMenuSelection">
               <iterate
                     ifEmpty="false">
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <not>
                        <test
                              args="intlola.record"
                              property="org.eclipse.core.resources.projectSessionProperty">
                        </test>
                     </not>
                  </adapt>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="za.ac.sun.cs.intlola.IntlolaRecordStop"
            commandId="za.ac.sun.cs.Intlola.recordstop">
         <enabledWhen>
            <with
                  variable="activeMenuSelection">
               <iterate
                     ifEmpty="false">
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <test
                           args="intlola.record"
                           property="org.eclipse.core.resources.projectSessionProperty">
                     </test>
                  </adapt>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
</plugin>